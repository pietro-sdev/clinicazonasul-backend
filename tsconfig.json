{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",            
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
